@model CarritoItem

@{
    ViewData["Title"] = "AgregarCarritoItem";
}
<h1>Agregar producto al carrito</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarCarritoItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               <label asp-for="Cantidad" class="control-label">Seleccioná la cantidad</label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar al carrito" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Productos">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
