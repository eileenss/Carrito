@model IEnumerable<CarritoItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Carrito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Carrito.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { idCar = item.CarritoId, idProd = item.ProductoId }) |
                @Html.ActionLink("Details", "Details", new { idCar = item.CarritoId, idProd = item.ProductoId }) |
                @Html.ActionLink("Delete", "Delete", new { idCar = item.CarritoId, idProd = item.ProductoId })
            </td>
        </tr>
}
    </tbody>
</table>
