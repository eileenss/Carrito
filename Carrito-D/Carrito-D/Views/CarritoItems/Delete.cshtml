@model CarritoItem

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar producto del carrito</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Producto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producto.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CarritoId" />
        <input type="hidden" asp-for="ProductoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="MiCarrito">Volver</a>
    </form>
</div>
