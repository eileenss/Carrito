@model StockItem

@{
    ViewData["Title"] = "Elegir Sucursal";
}

<h1>Elegí la sucursal de retiro</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ValidarStock" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @{
                    
                    if (!string.IsNullOrEmpty(ViewBag.SinStock))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.SinStock
                        </div>
                        
                        if (!string.IsNullOrEmpty(ViewBag.ConStock))
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.ConStock
                            </div>
                            <label asp-for="SucursalId" class="control-label"></label>
                            <select name="idSucursal" asp-for="SucursalId" class="form-control" asp-items="ViewBag.SucursalesConStock"></select>
                        }
                    }
                    else
                    {
                        <label asp-for="SucursalId" class="control-label"></label>
                        <select name="idSucursal" asp-for="SucursalId" class="form-control" asp-items="ViewBag.SucursalId"></select>

                }
                }
                
            </div>
           @* <input type="hidden" name="idSucursal" value="@ViewBag.SucursalId" />*@
            <div class="form-group">
                
                <input type="submit" value="Comprar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    
    
    






</div>